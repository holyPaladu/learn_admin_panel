{{!< layouts/layout}}

<section class='users'>
  <article class='users__header'>
    <h2>Users</h2>
    <a href='' class='base__btn'>
      Создать пользавателя
    </a>
  </article>
  <ul class='users__list'>
    <ol>
      <span>Id</span>
      <span>Name</span>
      <span>Email</span>
      <span>Role</span>
      <span>Controls</span>
    </ol>
    {{#each users}}
      <li>
        <span>{{id}}</span>
        <span>{{name}}</span>
        <span>{{email}}</span>
        <span>{{role}}</span>
        <div class='user__control'>
          <a href='/admin/user/{{id}}' class='user__action'>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              height='20px'
              viewBox='0 -960 960 960'
              width='20px'
              fill='#e3e3e3'
            ><path
                d='M216-216h51l375-375-51-51-375 375v51Zm-72 72v-153l498-498q11-11 23.84-16 12.83-5 27-5 14.16 0 
                27.16 5t24 16l51 51q11 11 16 24t5 26.54q0 14.45-5.02 
                27.54T795-642L297-144H144Zm600-549-51-51 51 51Zm-127.95 76.95L591-642l51 51-25.95-25.05Z'
              />
            </svg>
          </a>
          <button class='user__action delete__user' data-id='{{id}}'>
            <svg
              width='20'
              height='20'
              viewBox='0 0 32 32'
              fill='none'
              xmlns='http://www.w3.org/2000/svg'
            >
              <g clip-path='url(#clip0_2407_2)'>
                <path
                  d='M7.99984 25.3333C7.99984 26.8 9.19984 28 10.6665 28H21.3332C22.7998 28 23.9998 26.8 23.9998 25.3333V9.33333H7.99984V25.3333ZM10.6665 12H21.3332V25.3333H10.6665V12ZM20.6665 5.33333L19.3332 4H12.6665L11.3332 5.33333H6.6665V8H25.3332V5.33333H20.6665Z'
                  fill='black'
                />
              </g>
              <defs>
                <clipPath id='clip0_2407_2'>
                  <rect width='32' height='32' fill='white' />
                </clipPath>
              </defs>
            </svg>
          </button>
        </div>
      </li>
    {{/each}}
  </ul>
</section>

<script src='/js/deleteUser.js'></script>