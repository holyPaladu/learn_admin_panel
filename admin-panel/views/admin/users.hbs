{{!< layouts/layout}}

<section class='users'>
  <article class='users__header'>
    <h2>Users</h2>
  </article>
  <ul class='users__list'>
    <ol>
      <span>Id</span>
      <span>Name</span>
      <span>Email</span>
      <span>Role</span>
      <span>Controls</span>
    </ol>
    {{#each users}}
      <li>
        <span>{{id}}</span>
        <span>{{name}}</span>
        <span>{{email}}</span>
        <span>{{role}}</span>
        <div class='user__control'>
          <a href='/users/{{id}}' class='user__edit'>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              height='20px'
              viewBox='0 -960 960 960'
              width='20px'
              fill='#e3e3e3'
            ><path
                d='M216-216h51l375-375-51-51-375 375v51Zm-72 72v-153l498-498q11-11 23.84-16 12.83-5 27-5 14.16 0 
                27.16 5t24 16l51 51q11 11 16 24t5 26.54q0 14.45-5.02 
                27.54T795-642L297-144H144Zm600-549-51-51 51 51Zm-127.95 76.95L591-642l51 51-25.95-25.05Z'
              />
            </svg>
          </a>
        </div>
      </li>
    {{/each}}
  </ul>
</section>